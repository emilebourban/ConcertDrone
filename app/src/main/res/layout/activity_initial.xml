<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:outlineSpotShadowColor="@color/primary_dark"
    android:orientation="vertical"
    android:background="@mipmap/ic_launcher_drone_foreground"
    tools:context="ch.epfl.concertdrone.activity.InitialActivity">


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />


    <LinearLayout
        android:id="@+id/layoutWelcome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/welcome_message"
            android:text="Welcome on our Drone \nConcert Photographer app !"
            android:textSize="25dp"
            android:textColor="@color/primary_dark"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutWelcome_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <Button
            android:id="@+id/discovery_btn"
            android:text="Discover drone"
            android:onClick="StartDeviceListActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>








    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <Button
        android:id="@+id/buttonAutonomus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClicktoAutonomus"
        android:text="Dubug to Autonomus" />


</LinearLayout>
